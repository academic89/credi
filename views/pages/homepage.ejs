                      <label for="">Teléfono celular</label>
                      <input type="tel" class="form-control btn-rounded" id="phone" placeholder="10 dígitos" maxlength="10" onkeyup="onlyNumber()" >
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="">Correo electrónico</label>
                      <input type="email" class="form-control btn-rounded" id="email"  placeholder="Correo electrónico">
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <hr>
                    <label class="control control--checkbox">Acepto los términos y condiciones del servicio
                      <input id="terms" type="checkbox" class="check-m" value="true" />
                      <div class="control__indicator"></div>
                    </label>
                  </div>
                  <div class="col-sm-12">
                    <label class="control control--checkbox">Acepto el Aviso de privacidad
                      <input id="privacy" type="checkbox" class="check-m" value="true" />
                      <div class="control__indicator"></div>
                    </label>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-xl btn-block rounded-pill mt-5">Quiero un préstamo</button>
              </form>
                
            </div>
          </div>
        </div>
      </div>
